@model IEnumerable<WebAppFirst.Models.Products>
@{
    ViewBag.Title = "Index";
}

@section scripts{
    <script type="text/javascript">
        $(function () {
            $(".showProductId").click(function () {
                var productId = $(this).data("productid");
                alert(productId);
            });
        });

        $(function () {
            $("#poistaTuote").click(function () {
                var productId = $(this).data("productid");
                alert(productId);
            });
        });

    </script>
}


<div class="container-fluid">
    <h2>Index</h2>
    <h4>Tuotteita @Model.Count() kappaletta</h4>

    <div class="row">
        @foreach (WebAppFirst.Models.Products prod in Model)
        {
            <div class="col-lg-3">
                <div class="card mb-3">
                    <h3 class="card-header">@prod.ProductName</h3>
                    <div class="card-body">
                        <h5 class="card-title">@prod.QuantityPerUnit</h5>
                        <h6 class="card-subtitle text-muted">@prod.UnitsInStock</h6>
                    </div>
                    <img style="height:200px; width:100%; display:block;" src="@prod.ImageLink" alt="@prod.ImageLink">
                    @*<svg xmlns="@prod.ImageLink" class="d-block user-select-none" width="100%" height="200" aria-label="@prod.ImageLink" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
                        <rect width="100%" height="100%" fill="#868e96"></rect>
                        <img src=@prod.ImageLink alt=@prod.ImageLink height="50">
                        </svg>*@
                    <div class="card-body">
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">@prod.UnitPrice.Value.ToString("c")</li>
                        <li class="list-group-item">@prod.UnitsOnOrder</li>
                        <li class="list-group-item">@prod.ReorderLevel</li>
                    </ul>
                    <div class="card-body">
                        <a href="#" class="card-link">Card link</a>
                        <a href="#" class="card-link">Another link</a>
                    </div>
                    <div class="card-footer text-muted">
                        2 days ago
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<script>
    function naytaValittuTuote(tuoteID) {
        alert(tuoteID);
    }
</script>

